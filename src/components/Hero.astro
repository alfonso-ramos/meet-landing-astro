---
import { Image } from "astro:assets";
import heroImage from "../assets/tablet/image-hero.png";
import heroImageDestopLeft from "../assets/desktop/image-hero-left.png";
import heroImageDestopRight from "../assets/desktop/image-hero-right.png";
---

<section>
    <Image class="mx-auto xl:hidden" src={heroImage} alt="people in circles" />
    <div class="xl:flex xl:overflow">

        <Image class="hidden xl:block" src={heroImageDestopLeft} alt="people in circles" />
        <div class="md:w-[448px] mx-auto xl:mx-32">
            <h1 class="text-5xl font-black text-center mt-12 mb-6">
            Group Chat <br />
            for Everyone
            </h1>
            <p class="text-center text-slate-600">
            Meet makes it easy to connect with others face-to-face virtually and
            collaborate across any device.
            </p>
            <div
            class="flex flex-col items-center gap-4 mt-6 md:flex-row md:justify-center"
            >
            <a
                href="/"
                class="rounded-full w-[193px] bg-cyan-600 text-white px-10 py-4 font-black text-center"
            >
                Download <span class="text-cyan-300">v1.3</span>
            </a>
            <a
                href="/"
                class="rounded-full w-[161px] bg-purple-600 text-white px-10 py-4 font-black text-center"
            >
                What is it?
            </a>
            </div>
        </div>
        <Image class="hidden xl:block" src={heroImageDestopRight} alt="people in circles" />
    </div>
</section>
